@import "_mincss"

code-backgorund = #ececec

body
  background-color #ddd
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0 auto
  height 100%

a, a:active, a:hover, a:visited
  color #444

code
  background code-background

em
  color #666

h1
  & > a
    text-decoration none

hr
  border 1px solid #aaa

img
  max-width 100%

li
  padding 5px
pre
  white-space pre-wrap
  background code-background

ul
  list-style circle
  padding-left 15px

.small
  font-size small

.grey
  color #666

