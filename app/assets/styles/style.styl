@import "_mincss"

// Sweet background image (add url)
html
  background url() no-repeat center center fixed
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0 auto
  height 100%

a, a:active, a:hover, a:visited
  color #444
  font-size 1.2em

em
  color #666

h1
  & > a
    text-decoration none

hr
  border 1px solid #aaa

img
  max-width 100%

li
  padding 5px

p
  & > code
    background #eee

td > a
  display block

ul
  list-style circle
  padding-left 15px

.content
  padding-left 5px

.small
  font-size small

.grey
  color #666

.name
  text-align center

.nav
  border 1px solid #ccc
  display block
  text-align center
  padding 5px
  background #ddd
  text-decoration none

.rss
  float right
