@import "_mincss"

code-backgorund = #ececec

body
  background-color #ddd
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0 auto
  max-width 750px
  padding 50px

a, a:active, a:hover
  color #963

a
  &:visited
    color #363

code
  background code-background

em
  color #666

h1
  & > a
    text-decoration none

hr
  border 1px solid #aaa

img
  max-width 100%

pre
  white-space pre-wrap
  background code-background

ul
  list-style circle
  padding-left 15px

.small
  font-size small

.grey
  color #666

