{
  "name": "jcpst",
  "version": "0.0.1",
  "private": true,
  "main": "http-server",
  "scripts": {
    "build": "metalsmith",
    "clean": "rimraf public/",
    "deploy": "npm run deploy:build -s && npm run deploy:run -s",
    "deploy:build": "docker build --tag jcpst .",
    "deploy:run": "docker run -p 3000:3000 -d jcpst",
    "preserver": "node -e \"while(!require('fs').existsSync('./public'));\"",
    "server": "http-server",
    "start": "parallelshell 'npm run server -s' 'npm run watch -s'",
    "watch": "watch metalsmith src/ layouts/ -d"
  },
  "dependencies": {
    "http-server": "^0.8.0"
  },
  "devDependencies": {
    "jade": "^1.11.0",
    "metalsmith": "^2.0.1",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-feed": "0.0.6",
    "metalsmith-gzip": "^1.1.0",
    "metalsmith-layouts": "^1.2.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "0.0.1",
    "metalsmith-permalinks": "^0.4.0",
    "metalsmith-stylus": "^0.2.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.4.2",
    "watch": "^0.16.0"
  }
}
